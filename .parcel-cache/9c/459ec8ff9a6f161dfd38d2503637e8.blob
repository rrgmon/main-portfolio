'use strict';
const cardEl = document.querySelector('.card');
const cardPopEl = document.querySelector('.card-pop');
function cardPopDisplayFlex() {
    cardPopEl.classList.add('card-pop-display');
}
function cardPopDisplayNone() {
    cardPopEl.classList.remove('card-pop-display');
}
if (matchMedia) {
    const mediaQueryEl = window.matchMedia('(min-width: 56em)');
    mediaQueryEl.addListener(widthChange);
}
function widthChange(mediaQueryEL) {
    if (mediaQueryEL.matches) {
        cardEl.addEventListener('mouseover', cardPopDisplayFlex);
        cardEl.addEventListener('mouseout', cardPopDisplayNone);
        console.log('inside if statement');
    }
}
