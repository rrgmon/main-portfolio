'use strict';
const cardEl = document.getElementsByClassName('card');
const cardPopEl = document.querySelector('.card-pop');
let i = 0;
function cardPopDisplayFlex() {
    cardPopEl.classList.toggle('card-pop-display');
}
// function cardPopDisplayNone() {
//   cardPopEl.classList.remove('card-pop-display');
// }
let mediaQueryEl = window.matchMedia('(max-width: 56em)');
function widthDetect(mediaQueryEl1) {
    if (mediaQueryEl1.matches) while(i < cardEl.length){
        cardEl[i].addEventListener('mouseover', cardPopDisplayFlex);
        cardEl[i].addEventListener('mouseout', cardPopDisplayFlex);
    }
    else while(i < cardEl.length){
        cardEl[i].removeEventListener('mouseover', cardPopDisplayFlex);
        cardEl[i].removeEventListener('mouseout', cardPopDisplayFlex);
    }
}
mediaQueryEl.addEventListener('change', ()=>{
    widthDetect(mediaQueryEl);
});
mediaQueryEl.addEventListener('onload', ()=>{
    widthDetect(mediaQueryEl);
});
widthDetect(mediaQueryEl);
